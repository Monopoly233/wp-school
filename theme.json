{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#FFFFFF",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#1A1A1A",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#4A90E2",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#50E3C2",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#F5F5F5",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingSizes": [
				{
					"name": "Small",
					"size": "1rem",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "2rem",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "3rem",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "4rem",
					"slug": "x-large"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"writingMode": true,
			"defaultFontSizes": false,
			"fluid": true,
			"fontSizes": [
				{
					"fluid": {
						"max": "1rem",
						"min": "0.875rem"
					},
					"name": "Small",
					"size": "0.875rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.25rem",
						"min": "1rem"
					},
					"name": "Medium",
					"size": "1rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"max": "1.75rem",
						"min": "1.5rem"
					},
					"name": "Large",
					"size": "1.5rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "2.5rem",
						"min": "2rem"
					},
					"name": "Extra Large",
					"size": "2rem",
					"slug": "x-large"
				}
			],
			"fontFamilies": [
				{
					"name": "Noto Sans",
					"slug": "noto-sans",
					"fontFamily": "\"Noto Sans\", sans-serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/noto-sans/NotoSans-Regular.woff2"
							],
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontFamily": "Noto Sans"
						},
						{
							"src": [
								"file:./assets/fonts/noto-sans/NotoSans-Bold.woff2"
							],
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontFamily": "Noto Sans"
						}
					]
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var:preset|color|background",
			"text": "var:preset|color|primary"
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"left": "var:preset|spacing|medium",
				"right": "var:preset|spacing|medium"
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|noto-sans",
			"fontSize": "var:preset|font-size|medium",
			"fontWeight": "400",
			"lineHeight": "1.6"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var:preset|color|primary"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"lineHeight": "1.6"
				},
				"color": {
					"text": "var:preset|color|primary"
				}
			},
			"core/button": {
				"color": {
					"background": "var:preset|color|secondary",
					"text": "var:preset|color|base"
				},
				":hover": {
					"color": {
						"background": "var:preset|color|accent",
						"text": "var:preset|color|base"
					}
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "2rem",
						"bottom": "1rem",
						"left": "2rem"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "700"
				}
			},
			"core/quote": {
				"color": {
					"background": "var:preset|color|background",
					"text": "var:preset|color|primary"
				},
				"border": {
					"color": "var:preset|color|secondary",
					"width": "4px",
					"style": "solid"
				},
				"spacing": {
					"padding": {
						"top": "var:preset|spacing|medium",
						"right": "var:preset|spacing|medium",
						"bottom": "var:preset|spacing|medium",
						"left": "var:preset|spacing|medium"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|large",
					"fontStyle": "italic"
				}
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "var:preset|color|secondary",
					"text": "var:preset|color|base"
				},
				":hover": {
					"color": {
						"background": "var:preset|color|accent",
						"text": "var:preset|color|base"
					}
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "2rem",
						"bottom": "1rem",
						"left": "2rem"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "700"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var:preset|color|primary"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|secondary"
				},
				":hover": {
					"color": {
						"text": "var:preset|color|accent"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"customTemplates": [
		{
			"name": "page-no-title",
			"postTypes": ["page"],
			"title": "Page No Title"
		}
	]
}
